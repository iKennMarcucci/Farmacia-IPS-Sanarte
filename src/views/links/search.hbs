<main>
    <div class="container">
        <h5 class="mx-5 ps-5 fs-1 ">
            <p>Resultados de "<b>{{filtro}}</b>"</p>
        </h5>
        <hr />
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3 d-flex justify-content-center">
            {{#each producto}}
            <form action="/links/index" method="POST">
                <div class="col">
                    <div class="card text-bg-white mb-3 overflow-hidden justify-content-center"
                        style="max-width: 20rem;">
                        <div class="card-header bg-transparent overflow-hidden d-flex" style="block-size: 200px;"><img
                                class="img-fluid mx-auto" src="{{imagen_producto}}">
                        </div>
                        <div class="card-body text-wrap text-truncate" style="block-size: 100px; max-height:85px;">
                            <h5 class="card-title">{{nombre_producto}}</h5>
                        </div>
                        <div class="card-body bg-transparent border-0">
                            <p class="card-text">{{dosis_producto}} X {{via_producto}}</p>
                        </div>
                        <div class="card-body bg-transparent border-0">
                            <p class="card-text badge brosa text-wrap">$ {{precio_producto}}</p>
                        </div>
                        <div class="card-footer bg-transparent border-bottom">
                            <div class="d-flex justify-content-center">
                                <input type="hidden" name="producto" value="{{id_producto}}" />
                                <input type="hidden" name="precio" value="{{precio_producto}}" />
                                <button type="submit" class="btn btn-lg btn-IPS-azul">Comprar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            {{else}}
        </div>
        <div class="alert alert-danger mt-3 text-center" role="alert">
            <h4 class="fst-italic fw-semibold">No se ha encontrado el producto que buscas...</h4>
        </div>
        <div class="d-flex justify-content-center">
            <img class="mx-auto" src="/img/svgs/404.png" width="500rem">
        </div>
        {{/each}}
    </div>
</main>